<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/skyblue"
    tools:context=".SignupActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="280dp"
        android:layout_height="87dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/main_logo" />

    <EditText
        android:id="@+id/signupActivity_edittext_email"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:background="@drawable/text"

        android:hint="example@google.com"
        android:textSize="7pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.559"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.277" />


    <EditText
        android:id="@+id/signupActivity_edittext_password"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:background="@drawable/text"
        android:hint="비밀번호 (6자 이상부터 가능합니다.)"
        android:inputType="textPassword"
        android:textSize="5pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.59"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.407" />

    <EditText
        android:id="@+id/signupActivity_edittext_password2"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:background="@drawable/text"
        android:hint="비밀번호 (6자 이상부터 가능합니다.)"
        android:inputType="textPassword"
        android:textSize="5pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.59"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.473" />


    <EditText
        android:id="@+id/signupActivity_edittext_name"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:background="@drawable/text"
        android:gravity="center"
        android:hint="이름을 적어주세요"
        android:textSize="5pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.591"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.54" />

    <EditText
        android:id="@+id/signupActivity_edittext_birth"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:hint="yyyy-mm-dd 형식으로 입력해 주세요"
        android:textSize="5pt"
        android:background="@drawable/text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.59"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.609" />

    <EditText
        android:id="@+id/signupActivity_edittext_phonenum"

        android:layout_width="240dp"
        android:layout_height="40dp"
        android:background="@drawable/text"
        android:gravity="center"
        android:hint="하이픈 없이 입력해 주세요"
        android:textSize="5pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.591"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.673" />

    <EditText
        android:id="@+id/signupActivity_edittext_address2"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:background="@drawable/text"
        android:gravity="center"
        android:hint="주소를 입력해 주세요"
        android:textSize="5pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.591"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.74" />

    <Button
        android:id="@+id/signupActivity_button_signup"
        android:layout_width="170dp"
        android:layout_height="70dp"
        android:background="@drawable/button"
        android:text="회원가입"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.196"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.944" />

    <Button
        android:id="@+id/signupActivity_button_setup"
        android:layout_width="170dp"
        android:layout_height="70dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/button"
        android:text="완료"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.873"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.944" />

    <TextView
        android:id="@+id/email_input"
        android:layout_width="72dp"
        android:layout_height="30dp"
        android:text="*이메일"
        android:textColor="#000000"
        android:textSize="8pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.275" />

    <TextView
        android:id="@+id/email_notice"
        android:layout_width="258dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="*입력한 이메일은 아이디로 사용됩니다."
        android:textColor="#000000"
        android:textSize="6pt"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.59"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.34" />


    <TextView
        android:id="@+id/password_input"
        android:layout_width="43dp"
        android:layout_height="36dp"
        android:gravity="center"
        android:text="*PW"
        android:textColor="#000000"
        android:textSize="6pt"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.089"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.401" />

    <TextView
        android:id="@+id/password_current"
        android:layout_width="69dp"
        android:layout_height="36dp"
        android:gravity="center"
        android:text="*PW확인"
        android:textColor="#000000"
        android:textSize="6pt"

        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.473" />

    <ImageView
        android:id="@+id/setimage"
        android:layout_width="34dp"
        android:layout_height="33dp"
        android:layout_marginStart="8dp"

        android:layout_marginTop="348dp"
        android:layout_marginEnd="8dp"
        android:layout_weight="1.5"
        android:scaleType="fitStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.896"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/signupActivity_edittext_password2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/user_names"
        android:layout_width="69dp"
        android:layout_height="36dp"
        android:gravity="center"
        android:text="*이름"
        android:textColor="#000000"
        android:textSize="6pt"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.542" />

    <TextView
        android:id="@+id/birth_show"
        android:layout_width="69dp"
        android:layout_height="36dp"
        android:gravity="center"
        android:text="*생년월일"
        android:textColor="#000000"
        android:textSize="6pt"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.608" />

    <TextView
        android:id="@+id/user_number"
        android:layout_width="69dp"
        android:layout_height="36dp"
        android:gravity="center"
        android:text="*휴대전화"
        android:textColor="#000000"
        android:textSize="6pt"

        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.675" />

    <TextView
        android:id="@+id/user_number2"
        android:layout_width="69dp"
        android:layout_height="36dp"
        android:gravity="center"
        android:text="*휴대전화"
        android:textColor="#000000"
        android:textSize="6pt"

        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.675" />

    <TextView
        android:id="@+id/user_address"
        android:layout_width="69dp"
        android:layout_height="36dp"
        android:gravity="center"
        android:text="*주소"
        android:textColor="#000000"
        android:textSize="6pt"

        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.741" />




</android.support.constraint.ConstraintLayout>